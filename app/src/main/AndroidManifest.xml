<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.diabetesrecords">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_icon_text_tabs"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddDoctorActivity"
            android:label="@string/title_activity_add_doctor"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.AddAppointmentActivity"
            android:label="@string/title_activity_add_appointment"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.AddReminderActivity"
            android:label="@string/title_activity_add_reminder"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.MyProfileActivity"
            android:label="@string/title_activity_my_profile"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/MyMaterialTheme"/>



    </application>

</manifest>